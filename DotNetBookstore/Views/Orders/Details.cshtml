@model DotNetBookstore.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-receipt"></i> Order Details</h2>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Order #<span class="text-primary">@Model.OrderId</span></h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.OrderDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderDate)</dd>
                        <dt class="col-sm-4">Customer Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Province), @Html.DisplayFor(model => model.PostalCode)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerId)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerId)</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Book</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@item.Book.Title</td>
                                        <td>@item.Quantity</td>
                                        <td>@String.Format("{0:c}", item.Price)</td>
                                    </tr>
                                }
                                <tr class="table-info">
                                    <td colspan="2" class="text-end fw-bold">Order Total:</td>
                                    <td class="fw-bold text-success">@Html.DisplayFor(model => model.OrderTotal)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-clock-history"></i> Order History
                </a>
            </div>
        </div>
    </div>
</div>