@model IEnumerable<DotNetBookstore.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-clock-history"></i> Order History</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.OrderTotal)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.City)</th>
                                    <th>@Html.DisplayNameFor(model => model.Province)</th>
                                    <th>@Html.DisplayNameFor(model => model.CustomerId)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OrderId</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                        <td class="fw-bold text-success">@Html.DisplayFor(modelItem => item.OrderTotal)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Province)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>